// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("POSTGRES_PRISMA_URL")
  relationMode = "prisma"
}

// New model to store multiple image URLs for each property
model Media {
  id         String   @id @default(cuid())
  url        String
  propertyId String
  // This relation ensures that if a Property is deleted, all its Media records are also deleted.
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())

  @@index([propertyId])
}

model Property {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  address     String
  city        String
  price       String
  category    String
  listingType String   @map("type")
  status      String
  imgUrl      String   // This remains as the main "featured" image
  details     String?

  // --- NEW FIELDS ADDED HERE ---
  isVisible   Boolean  @default(true) // For making listings visible/invisible to the public
  media       Media[]  // This creates the one-to-many relationship to the Media model

  @@index([listingType, status])
}
