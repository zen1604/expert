// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("POSTRES_PRISMA_URL")
  relationMode = "prisma"
}

model Media {
  id         String   @id @default(cuid())
  url        String
  propertyId String
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
  @@index([propertyId])
}

model Property {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  address     String
  city        String
  price       String // This will now be "Asking Price"
  category    String
  listingType String   @map("type")
  status      String
  imgUrl      String   // The featured image
  details     String?  // The main description
  isVisible   Boolean  @default(true)
  media       Media[]

  // --- NEW SPECIFICATION FIELDS ---
  minSizeSqFt       String?
  maxSizeSqFt       String?
  clearHeightFeet   String?
  truckLevelDoors   String?
  driveInDoors      String?
  parking           String?
  yearOfConstruction String?
  zoning            String?
  electricalEntry   String?
  officeAC          Boolean? @default(false)
  sprinklers        Boolean? @default(false)
  warehouseHeating  String?
  officeHeating     String?
  buildingType      String?
  premisesType      String?
  dimensionsFeet    String?
  columnSpansFeet   String?
  landAreaSqFt      String?
  feetSqFt          String? // Unclear field from screenshot, added for completeness

  // --- NEW AREA BREAKDOWN FIELDS ---
  areaOfficeSqFt    String?
  areaWarehouseSqFt String?
  areaMezzanineSqFt String?
  areaTotalSqFt     String?

  // --- NEW FINANCIAL FIELDS ---
  pricePerSqFt      String?
  assessmentYear    String?
  assessmentLand    String?
  assessmentBuilding String?
  assessmentTotal   String?
  taxYear           String? // Assuming taxes are also for a specific year
  taxMunicipal      String?
  taxSchool         String?
  taxTotal          String?

  @@index([listingType, status])
}
